{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "pnpm build",
        "beforeDevCommand": "pnpm dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "bioparallel",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "setMinSize": true
            },
            "fs": {
                "scope": {
                    "allow": ["**"],
                    "deny": [],
                    "requireLiteralLeadingDot": false
                },
                "readFile": true
            },
            "dialog": {
                "open": true,
                "save": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "../public/logo_32.png",
                "../public/logo_128.png",
                "../public/logo_256.png",
                "../public/logo_512.png",
                "../public/logo.ico"
            ],
            "identifier": "com.parallel.bio",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "title": "bioparallel",
                "label": "bioparallel",
                "width": 1280,
                "height": 720,
                "minWidth": 640,
                "minHeight": 360,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "fileDropEnabled": false,
                "alwaysOnTop": false
            },
            {
                "width": 384,
                "height": 216,
                "resizable": false,
                "maximizable": false,
                "minimizable": false,
                "closable": false,
                "center": true,
                "decorations": false,
                "transparent": true,
                "url": "splashscreen.html",
                "label": "splashscreen"
            }
        ]
    }
}
